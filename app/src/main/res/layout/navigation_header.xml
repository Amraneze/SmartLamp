<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    android:background="@drawable/menu_drawer_background"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="5dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/iv_logo_bwm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_bwc_mobile_logo_menu" />

    <fr.simona.smartlamp.common.ui.CommonTextView
        android:id="@+id/tv_emei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/settings_general_emei"
        android:textSize="11sp"
        app:font_style="open_sans_semi_bold"
        android:textColor="@color/blue_navigation_drawer" />

    <fr.simona.smartlamp.common.ui.CommonTextView
        android:id="@+id/tv_emei_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_general_emei"
        android:textSize="16sp"
        app:font_style="open_sans_regular"
        android:textColor="@color/white" />

</LinearLayout>