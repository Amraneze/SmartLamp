<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_height="?attr/actionBarSize"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    app:navigationIcon="@drawable/action_bar_menu_btn"
    android:background="?attr/colorPrimaryDark">

    <LinearLayout
        android:id="@+id/ll_menu_filter"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="end"
        android:clickable="true"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/btn_menu_filter"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/ic_navbar_filter"
            android:clickable="false"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_btn_scan"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="end"
        android:clickable="true"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/btn_scan_devices"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:clickable="false"
            android:background="@drawable/ic_navbar_refresh"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:visibility="visible" />
    </LinearLayout>

</android.support.v7.widget.Toolbar>